generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./main.db"
}

model CustomToken {
  id     String  @id
  name   String
  symbol String
  image  String?
  extra  String  @default("{}")
}

model Coin {
  id        String  @id
  name      String
  symbol    String
  networkId String?
  network   Coin?   @relation(references: [id], fields: [networkId], onDelete: Cascade, onUpdate: Cascade, "SUB")
  extra     String  @default("{}")
  subs      Coin[]  @relation("SUB")
}

model Balance {
  symbol String @id
  value  Float
}
